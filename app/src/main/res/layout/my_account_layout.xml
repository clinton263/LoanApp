<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountInnfo">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#512da8"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.Toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-26dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus_image_3" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/controlnumber_info_header"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="UnknownIdInLayout">

                        <TextView
                            android:id="@+id/loandate_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="45"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="From date"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="10"
                            android:src="@drawable/ic_swap_horiz_white_24dp" />

                        <TextView
                            android:id="@+id/limitdate_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="45"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="limit date"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/controlnumber_info_header_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/print_clearly"
                        android:gravity="center_horizontal"
                        android:text="control number"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/current_date_info"

                        android:layout_marginTop="60dp"

                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="16dp"
                        tools:ignore="UnknownId">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="60"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/fullname_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_baseline_person_24"
                                    android:fontFamily="@font/calibri"
                                    android:text="Full name"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/phonenumber_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:drawableLeft="@drawable/ic_baseline_phone_enabled_24"
                                    android:fontFamily="@font/calibri"
                                    android:text="Phone Number"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/resident_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                                    android:fontFamily="@font/calibri"
                                    android:text="Resident"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#ECE4E4" />

                                <TextView
                                    android:id="@+id/loanamount_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/calibri"
                                    android:text="loan amount"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/takenamount_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="taken amount"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/interest_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="loan interest"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold"
                                    tools:ignore="DuplicateIds" />

                                <TextView
                                    android:id="@+id/interestPercentage_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="interest percentage"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/directcost_info_"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="direct cost"
                                    android:textColor="#8a8a8a"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/actualdebt_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:gravity="end"
                                    android:text="TZS actual debt"
                                    android:textAlignment="textEnd"
                                    android:textColor="#2196F3"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="1dp"
                                    android:layout_margin="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="#ECE4E4" />

                                <TextView
                                    android:id="@+id/penaltamount_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:gravity="end"
                                    android:text="penalt TZS"
                                    android:textAlignment="textEnd"
                                    android:textColor="#2196F3"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="1dp"
                                    android:layout_margin="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="#ECE4E4" />

                                <TextView
                                    android:id="@+id/actualdebtpenalty_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:gravity="end"
                                    android:text=" actual debt penalt TZS"
                                    android:textAlignment="textEnd"
                                    android:textColor="#2196F3"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="1dp"
                                    android:layout_margin="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="#ECE4E4" />

                                <TextView
                                    android:id="@+id/status_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/calibri"
                                    android:gravity="end"
                                    android:text="status"
                                    android:textAlignment="textEnd"
                                    android:textColor="#2196F3"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:rowCount="2"
                            android:columnCount="2">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_gravity="fill"
                                android:layout_rowWeight="1"
                                android:layout_margin="4dp"
                                android:layout_columnWeight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="3dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_gravity="center_vertical|center_horizontal">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/dashboard" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="Debt"
                                        android:textColor="#8a8a8a"
                                        android:textSize="18sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="Debt"
                                        android:id="@+id/actualdebt_info_card"
                                        android:textColor="#8a8a8a"
                                        android:textSize="20sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_gravity="fill"
                                android:layout_rowWeight="1"
                                android:layout_margin="4dp"
                                android:layout_columnWeight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_gravity="center_vertical|center_horizontal">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/dashboard" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="Remain"
                                        android:textColor="#8a8a8a"
                                        android:textSize="18sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/remainAmount_card"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="Remain"
                                        android:textColor="#8a8a8a"
                                        android:textSize="20sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_gravity="fill"
                                android:layout_rowWeight="1"
                                android:layout_margin="4dp"
                                android:layout_columnWeight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_gravity="center_vertical|center_horizontal">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/dashboard" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="@string/total_installments"
                                        android:textColor="#8a8a8a"
                                        android:textSize="18sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/totalinstallment_card"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="Remain"
                                        android:textColor="#8a8a8a"
                                        android:textSize="20sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_gravity="fill"
                                android:layout_rowWeight="1"
                                android:layout_margin="4dp"
                                android:layout_columnWeight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_gravity="center_vertical|center_horizontal">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/dashboard" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="Remain"
                                        android:textColor="#8a8a8a"
                                        android:textSize="18sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/cashgiven_card"
                                        android:fontFamily="@font/print_clearly"
                                        android:text="Remain"
                                        android:textColor="#8a8a8a"
                                        android:textSize="20sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </GridLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/actualdebtpenalty_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:drawablePadding="3dp"
                                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                                    android:text="actual debt penalty"
                                    android:textColor="#2196F3"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/penalty_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="penalty"
                                    android:drawablePadding="3dp"
                                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                                    android:textColor="#2196F3"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/amountrequested_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="amount requested"
                                    android:drawablePadding="3dp"
                                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                                    android:textColor="#2196F3"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/amountgiven_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="amount given"
                                    android:drawablePadding="3dp"
                                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                                    android:textColor="#2196F3"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/interest_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="interest %"
                                    android:drawablePadding="3dp"
                                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                                    android:textColor="#2196F3"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/interestamount_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="interest amount"
                                    android:textColor="#2196F3"
                                    android:drawablePadding="3dp"
                                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/totalinstallment_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="total installment"
                                    android:drawablePadding="3dp"
                                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                                    android:textColor="#2196F3"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="1dp"
                            app:cardUseCompatPadding="true"
